<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:background="@android:color/background_dark">

    <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center">
            <TextView
                android:textSize="23sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/primary_text_dark"
                android:text="disconnected"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:id="@+id/statusLabel"/>
    </LinearLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">

            <view
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    class="com.appiusmaximus.puffin.LeftButton"
                    android:id="@+id/view"
                    android:layout_weight="1"
                    custom:button_background="#2a2a2a"
                    custom:button_stroke="#444444"/>

            <view
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    class="com.appiusmaximus.puffin.RightButton"
                    android:id="@+id/view2"
                    android:layout_weight="1"
                    custom:button_background="#2a2a2a"
                    custom:button_stroke="#444444"
                    android:layout_gravity="center"/>
        </LinearLayout>
        <view
                class="com.appiusmaximus.puffin.CenterButton"
                android:layout_height="157dp"
                android:layout_width="160dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                custom:bg="@android:color/holo_blue_light"
                custom:st="@android:color/holo_blue_dark"
            android:id="@+id/center"
            android:focusableInTouchMode="false" />

    </FrameLayout>
</LinearLayout>